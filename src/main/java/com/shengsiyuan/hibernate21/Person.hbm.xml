<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.shengsiyuan.hibernate.Person" table="person">
	
		<id name="id" column="id" type="string">
			<generator class="uuid"></generator>
		</id>
		
		<property name="name" type="string"></property>
		
		<joined-subclass name="com.shengsiyuan.hibernate.Student" table="student">
			<key column="id"></key>
			<property name="cardId" type="string"></property>
		</joined-subclass>
		
		<joined-subclass name="com.shengsiyuan.hibernate.Teacher" table="teacher">
			<key column="id"></key>
			<property name="salary" type="integer"></property>
		</joined-subclass>
				
	</class>

</hibernate-mapping>
