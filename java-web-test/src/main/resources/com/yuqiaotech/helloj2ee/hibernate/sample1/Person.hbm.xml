<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.yuqiaotech.helloj2ee.hibernate.sample1.Person"
		table="person1">
		<id name="pid" column="pid">
			<generator class="uuid.hex" />
		</id>
		<property name="name" />
		<property name="age" />
		<set name="address" table="address" lazy="true" inverse="true"
			cascade="all">
			<key column="pid" />
			<one-to-many class="com.yuqiaotech.helloj2ee.hibernate.sample1.Address" />
		</set>
	</class>
</hibernate-mapping>