<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GuessNumber</servlet-name>
    <servlet-class>edu.jiangxin.guessnumber.GuessNumber</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>BookAdmin</servlet-name>
    <servlet-class>edu.jiangxin.bookadmin.BookAdmin</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>GuessNumber</servlet-name>
    <url-pattern>/GuessNumber</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BookAdmin</servlet-name>
    <url-pattern>/BookAdmin</url-pattern>
  </servlet-mapping>
    <filter>
        <filter-name>ClickFilter</filter-name>
        <filter-class>edu.jiangxin.filter.ClickFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ClickFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>http://javaxp.net/xl</taglib-uri>
            <taglib-location>/WEB-INF/xianlin.tld</taglib-location>
        </taglib>
    </jsp-config>
    <icon>
        <small-icon>images/smallicon.jpg</small-icon>
        <large-icon>images/largeicon.jpg</large-icon>
    </icon>

</web-app>