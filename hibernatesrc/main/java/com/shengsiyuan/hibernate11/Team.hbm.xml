<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.shengsiyuan.hibernate.Team" table="team">
	
		<id name="id" column="id" type="string">
			<generator class="uuid"></generator>
		</id>
	
		<property name="teamName" column="teamName" type="string"></property>
		
		<bag name="students" table="student" cascade="all" inverse="true">
			<key column="team_id"></key>
			<one-to-many class="com.shengsiyuan.hibernate.Student"/>
		</bag>
		
	</class>

</hibernate-mapping>
